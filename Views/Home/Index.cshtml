        </form>  
        <form action = "survival" method = "post">
            Survival:
            <button action = "submit" name = "survival" value = "minus">-</button>
            @ViewBag.survival 
            <button action = "submit" name = "survival" value = "plus">+</button>
            <br> 
        </form>  
        <form action = "technology" method = "post">
            Technology:
            <button action = "submit" name = "technology" value = "minus">-</button>
            @ViewBag.technology 
            <button action = "submit" name = "technology" value = "plus">+</button>
            <br> 
        </form>  
        <form action = "transport" method = "post">
            Transport:
            <button action = "submit" name = "transport" value = "minus">-</button>
            @ViewBag.transport 
            <button action = "submit" name = "transport" value = "plus">+</button>
            <br> 
        </form> 
        </p> 
    </div>
    <h3>Traits</h3>
    <b>@ViewBag.TraitError</b>
    <ul>
    @Html.Raw(@ViewBag.Traits)
    </ul>
    <form action = 'traitSort' method = 'post'>
        <input type = 'checkbox' name = 'alignmentAll' value = "checked" checked> All 
        <input type = 'checkbox' name = 'good' value = "checked"> Good 
        <input type = 'checkbox' name = 'bad' value = "checked"> Bad <br>
        <input type = 'checkbox' name = 'valueAll' value = "checked" checked> All 
        <input type = 'checkbox' name = 'minor' value = "checked"> Minor 
        <input type = 'checkbox' name = 'major' value = "checked"> Major 
        <input type = 'checkbox' name = 'special' value = "checked"> Special <br>
        <input type = 'checkbox' name = 'sourceAll' value = "checked" checked> All
        <input type = 'checkbox' name = 'core' value = "checked"> Core Book (Normal Traits) 
        <input type = 'checkbox' name = 'coreAlien' value = "checked"> Core Book (Alien Traits)<br>
        <button action = 'submit'> Sort Traits</button>
    </form>
    <form action = 'traitSelect' method = 'post'>
        <select name = 'trait'>
        @Html.Raw(@ViewBag.TraitSelectors)>
        </select>
        <button action = 'submit'>Select Trait</button>
    </form>
    <p><b> @ViewBag.TraitName </b><br>
    <em>@ViewBag.TraitVal @ViewBag.TraitAllign</em><br>
    @ViewBag.TraitDesc<br>
    @Html.Raw(@ViewBag.TraitEffect)<br></p>
    <form action = "traitAdd" method = "post">
        <button action = "submit">Add Trait</button>
    </form>
    <br>
    <h3>Stuff</h3>
    <br>
</div>